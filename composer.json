{
    "name": "danielburger1337/openid-hash",
    "type": "library",
    "description": "Create/Verify OpenID Connect (OIDC) verification hashes.",
    "license": "MIT",
    "homepage": "https://github.com/danielburger1337/openid-hash-php",
    "authors": [
        {
            "name": "Daniel Burger",
            "homepage": "https://github.com/danielburger1337"
        }
    ],
    "keywords": [
        "openid",
        "openid connect",
        "oidc",
        "hash",
        "at_hash",
        "c_hash",
        "s_hash"
    ],
    "require": {
        "php": "^8.2",
        "danielburger1337/sha3-shake": "^1.0",
        "spomky-labs/base64url": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.66.0",
        "phpstan/phpstan": "^1.12.13",
        "phpunit/phpunit": "^11.5.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "danielburger1337\\OpenIdHash\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "danielburger1337\\OpenIdHash\\Tests\\": "test"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
